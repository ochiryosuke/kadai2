<div>
  <p class="notice"><%= flash[:notice]%></p>
</div>
<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book|%>
    <tr>
      <% if book %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', "/books/#{book.id}"%></td>
        <td><%= link_to 'Edit', "/books/#{book.id}/edit"%></td>
        <td><%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% end %>
    </tr>
  <% end %>
</table>


<h2 class = "form_head">New book</h2>
<!--バリテーションのメッセージ-->
<p>error<p>
<p><%= flash[:title]%></p>
<p><%= flash[:body]%></p>

<!--投稿フォーム部分-->
<%= form_with model: Book.new, url:'/books', method: :post do |f|%>
  <div class="field">
    <%= f.label :title_lable, "Title"%>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body_lable, "Body"%>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Create Book" %>
<% end %>